<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#0099cc</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
    </style>

    <style name="FacilitatorButtonText">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorFacilitatorTextBtn</item>
    </style>

    <style name="DriverButtonText">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorDriverTextBtn</item>
    </style>

    <style name="ObserverButtonText">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorObserverTextBtn</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/colorFont</item>
    </style>

</resources>
