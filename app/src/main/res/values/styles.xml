<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#0099cc</item>
        <item name="colorControlActivated">@color/colorTextEditAccent</item>
        <item name="colorControlHighlight">@color/colorTextEditAccent</item>
    </style>

    <style name="BigGreenButtonText">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorGreenText</item>
    </style>

    <style name="BigBlueButtonText">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorBlueText</item>
    </style>

    <style name="BigRedButtonText">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorRedText</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/colorGreyFont</item>
    </style>

    <style name="MediumText">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/colorGreyFont</item>
    </style>


    <style name="DescText">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/colorGreyFont</item>
    </style>


    <style name="SmallerDescText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorGreyFont</item>
    </style>


    <style name="SmallText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorGreyFont</item>
    </style>

    <style name="BackButton">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorBlueText</item>
    </style>

    <style name="AllCaps">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Warning">
        <item name="android:textSize">75sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
