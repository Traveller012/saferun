<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/observer_back_to_main"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:layout_margin="10dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="top"
        android:text="@string/go_back_button"
        android:background="@drawable/backbtn"
        android:textAppearance="@style/BackButton"
        android:textAllCaps="false"
        android:onClick="observerGoBackToMain"
        android:enabled="true"
        />

    <TextView
        android:id="@+id/observer_header"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:text="@string/observer_list_header"
        android:textAppearance="@style/TitleText">
    </TextView>

    <TextView
        android:id="@+id/observer_role_description"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="3"
        android:text="@string/observer_role_desc"
        android:textAppearance="@style/DescText">
    </TextView>

    <ScrollView
        android:layout_width="wrap_content"
        android:fillViewport="true"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center">

        <RadioGroup
            android:id="@+id/observer_choices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/observer_choice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choice1" />

            <RadioButton
                android:id="@+id/observer_choice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choice2" />

            <RadioButton
                android:id="@+id/observer_choice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choice2" />

            <RadioButton
                android:id="@+id/observer_choice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choice2" />

        </RadioGroup>

    </ScrollView>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/observer_join_run"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:text="@string/join_run"
        android:background="@drawable/biggreenbtn"
        android:textAppearance="@style/BigGreenButtonText"
        android:textAllCaps="false"
        android:onClick="observerJoinRun"
        android:enabled="true"
        />

</LinearLayout>