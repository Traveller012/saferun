<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/facilitator_exit_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="@string/exit"
            android:background="@drawable/bigredbtn"
            android:textAppearance="@style/BigRedButtonText"
            android:textAllCaps="false"
            android:onClick="exit"
            android:enabled="true" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/facilitator_refresh_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="@string/refresh"
            android:background="@drawable/bigbluebtn"
            android:textAppearance="@style/BigBlueButtonText"
            android:textAllCaps="false"
            android:onClick="refresh"
            android:enabled="true" />

    </LinearLayout>

    <TextView
        android:id="@+id/facilitator_name"
        android:textAppearance="@style/MediumText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/facilitator_name"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/number_of_observers"
        android:textAppearance="@style/MediumText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/observer_integer"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/number_of_drivers"
        android:textAppearance="@style/MediumText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/driver_integer"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">

        <ScrollView
            android:id="@+id/facilitator_scroll_observers"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="top"
                android:textAppearance="@style/DescText"
                android:id="@+id/list_of_observers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/observers"
                android:textAlignment="center">
            </TextView>

        </ScrollView>

        <ScrollView
            android:id="@+id/facilitator_scroll_drivers"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="top"
                android:id="@+id/list_of_drivers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/drivers"
                android:textAppearance="@style/DescText"
                android:textAlignment="center">
            </TextView>

        </ScrollView>

    </LinearLayout>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/facilitator_start_run_time_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:text="@string/start_run"
        android:background="@drawable/biggreenbtn"
        android:textAppearance="@style/BigGreenButtonText"
        android:textAllCaps="false"
        android:onClick="startRunTime"
        android:enabled="true" />
</LinearLayout>