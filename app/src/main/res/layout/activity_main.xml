<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:textAppearance="@style/TitleText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:hint="@string/enter_name_hint"
        android:inputType="textCapWords"
        android:imeOptions="actionNone" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/facilitator_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:text="@string/facilitator_btn"
        android:background="@drawable/biggreenbtn"
        android:textAppearance="@style/BigGreenButtonText"
        android:textAllCaps="false"
        android:onClick="selectFacilitator"
        android:enabled="true"/>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/driver_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:text="@string/driver_btn"
        android:background="@drawable/bigbluebtn"
        android:textAppearance="@style/BigBlueButtonText"
        android:textAllCaps="false"
        android:onClick="selectDriver"
        android:enabled="true"
        />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/observer_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:text="@string/observer_btn"
        android:background="@drawable/bigredbtn"
        android:textAppearance="@style/BigRedButtonText"
        android:textAllCaps="false"
        android:onClick="selectObserver"
        android:enabled="true"
        />



</LinearLayout>
